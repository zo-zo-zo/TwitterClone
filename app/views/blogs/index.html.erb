<h1>whisper一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td>
        <p><%= blog.content %></p>
        <%= link_to '詳細', blog_path(blog.id),class: 'btn btn-default' %>
        <%= link_to "編集", edit_blog_path(blog.id) , data: { confirm: '本当に編集していいですか？' },class: 'btn btn-default' %>
        <%= link_to '削除', blog_path(blog.id), method: :delete ,data: {confirm: '本当に削除していいですか？'} ,class: 'btn btn-default'%>
    </td>

  </tr>
<% end %>
</table>

<%= link_to '新しく投稿する', new_blog_path ,class: 'btn btn-default'%>
